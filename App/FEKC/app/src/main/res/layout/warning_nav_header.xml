<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="25dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="80dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_action_warning"
            android:scaleType="center"
            android:id="@+id/warning_icon"
            android:paddingBottom="5dp"/>

        <TextView
            android:id="@+id/task_selection_header"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="F E K C Warning"
            android:textSize="20dp"
            android:textColor="@color/colorWhite"
            android:layout_toRightOf="@id/warning_icon"
            android:paddingLeft="10dp"/>
    </RelativeLayout>

</RelativeLayout>