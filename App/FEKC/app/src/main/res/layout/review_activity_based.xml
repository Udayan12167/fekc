<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/activityTaskNav">
                <include layout="@layout/review_nav" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/activity_goButton">
        <Button
            android:id="@+id/activity_activity_based_task_upload_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@color/reviewNav"
            android:textColor="@color/colorWhite"
            android:text="Create Task" />

        <ProgressBar
            android:id="@+id/activity_activity_based_task_progress_bar"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="10dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/time_scroll"
        android:layout_below="@id/activityTaskNav"
        android:layout_above="@id/activity_goButton">
        <include layout="@layout/activity_activity_based_task_review" />
    </ScrollView>
</RelativeLayout>