    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.shiv.fekc.activity.ActivityBasedTaskActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Name"
        android:id="@+id/tasknameview"
        android:layout_alignParentTop="true"

        android:layout_marginTop="100dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/taskname"
        android:hint="Task Name"

        android:layout_below="@+id/tasknameview"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Date"
        android:id="@+id/enddateview"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/taskname"
        />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Apps"
        android:id="@+id/add_apps"
        android:layout_below="@+id/enddateview"
        android:layout_marginTop="50dp"

        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apps"
        android:id="@+id/add_apps_button"
        android:onClick="addAppsButton"
        android:layout_toRightOf="@+id/add_apps"
        android:layout_alignBottom="@+id/add_apps"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Friends"
        android:id="@+id/add_friends"
        android:layout_alignBottom="@+id/add_apps_button"
        android:layout_toRightOf="@+id/add_apps_button"
        android:layout_marginLeft="20dp"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Friends"
        android:id="@+id/activity_schedule_based_task_add_friends_button"
        android:onClick="addFriendsButton"
        android:layout_alignBottom="@+id/add_friends"
        android:layout_toRightOf="@+id/add_friends"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Name"
        android:id="@+id/activity_description_textview"
        android:layout_below="@+id/add_apps"
        android:layout_marginTop="50dp"

        />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="375dp"
        android:layout_marginBottom="77dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:id="@+id/activity_description"
        android:layout_alignBottom="@+id/activity_description_textview"
        android:layout_toEndOf="@+id/activity_description_textview" />

</RelativeLayout>
