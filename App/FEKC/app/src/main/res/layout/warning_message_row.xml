<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/user_shiv"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_marginBottom="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/user_data">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/warning_message_row_image_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/test_user2" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/warning_message_row_image_view"
        android:layout_centerVertical="true"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/warning_message_row_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Shiv Kandikuppa"
            android:textColor="#222"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/warning_message_row_message_text_view"
            android:layout_below="@id/warning_message_row_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hey! You got to stop using this app!"
            android:textSize="15sp" />
    </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        android:layout_below="@id/user_data"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/TaskDivider"/>
</RelativeLayout>
